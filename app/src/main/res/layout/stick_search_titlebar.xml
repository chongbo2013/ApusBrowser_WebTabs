<?xml version="1.0" encoding="utf-8"?>
<www.flybrowser.net.flybrowser.view.StickFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/titlebar_hight"

    >
    <FrameLayout
        android:id="@+id/stick_titlebar_one"
        android:layout_width="match_parent" android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:id="@+id/logo_one"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/search_voice"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:paddingRight="10dip"
            android:layout_marginEnd="@dimen/logo_size_magin_left"
            android:layout_marginStart="@dimen/logo_size_magin_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/search_input_hit"
            android:id="@+id/logo_name_one"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/logo_size_magin_left"
            android:layout_marginEnd="@dimen/logo_size_magin_left"
            android:layout_marginTop="@dimen/logo_size_magin_top"
            android:layout_marginBottom="@dimen/logo_size_magin_top"
            android:textSize="@dimen/logo_text_size"
            android:background="@color/titlebar_color"
            android:textColor="@android:color/white"
            android:paddingLeft="10dip"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/logo" />
    </FrameLayout>

<FrameLayout
    android:id="@+id/stick_titlebar_two"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white"
    android:visibility="visible"
    >

    <ImageView
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:id="@+id/logo_two"
        android:layout_gravity="right|center_vertical"
        android:src="@mipmap/search_voice2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:paddingRight="10dip"
        android:layout_marginEnd="@dimen/logo_size_magin_left"
        android:layout_marginStart="@dimen/logo_size_magin_left" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/search_input_hit"
        android:id="@+id/logo_name_two"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/logo_size_magin_left"
        android:layout_marginEnd="@dimen/logo_size_magin_left"
        android:layout_marginTop="@dimen/logo_size_magin_top"
        android:layout_marginBottom="@dimen/logo_size_magin_top"
        android:textSize="@dimen/logo_text_size"
        android:background="@color/titlebar_color"
        android:textColor="@color/titlebar_color_gray"
        android:paddingLeft="10dip"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/logo" />
</FrameLayout>

</www.flybrowser.net.flybrowser.view.StickFrameLayout>